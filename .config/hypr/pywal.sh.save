#!/bin/bash
source "$HOME/.cache/wal/colors.sh"

cat > "$HOME/.config/hypr/colors.conf" <<EOF
# Auto-generated by pywal
\$background = $(hex "$background")
\$foreground = $(hex "$foreground")

\$color0 = $(hex "$color0") \$color1 = $(hex "$color1") 
\$color2 = $(hex "$color2") \$color3 = $(hex "$color3") 
\$color4 = $(hex "$color4") \$color5 = $(hex "$color5") 
\$color6 = $(hex "$color6") \$color7 = $(hex "$color7") 
EOF
